generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")

}

enum ProjectVisibility {
  PRIVATE
  PUBLIC
}

enum SharePermission {
  READ_ONLY
  EDIT
}

enum ContributionStatus {
  OPEN
  MERGED
  CLOSED
}

model User {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  kindeId         String        @unique
  email           String?
  name            String?
  credits         Int           @default(200)
  projects        Project[]
  shareLinks      ShareLink[]
  contributions   Contribution[]
  cliTokens     CliToken[]
  creditTransactions CreditTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditTransaction {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  user       User     @relation(fields: [userId], references: [kindeId])
  amount     Int
  reason     String
  modelTokens Int?
  promptTokens Int?
  completionTokens Int?
  details    Json?
  createdAt  DateTime @default(now())
}

model Developer {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  kindeId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    userId   String
    user     User     @relation(fields: [userId], references: [kindeId])
    name    String
    theme String?
    thumbnail String?
    visibility ProjectVisibility @default(PRIVATE)
    frames Frame[]
    shareLinks ShareLink[]
    contributions Contribution[]
    deletedAt DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Frame {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    title  String
    htmlContent String
    projectId String @db.ObjectId
    project Project @relation(fields: [projectId], references: [id])
    shareLinks ShareLink[]
    contributionFrames ContributionFrame[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model ShareLink {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  token      String          @unique
  projectId  String          @db.ObjectId
  project    Project         @relation(fields: [projectId], references: [id])
  frameId    String?         @db.ObjectId
  frame      Frame?          @relation(fields: [frameId], references: [id])
  permission SharePermission @default(READ_ONLY)
  createdBy  String?
  creator    User?           @relation(fields: [createdBy], references: [kindeId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contribution {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  projectId String             @db.ObjectId
  project   Project            @relation(fields: [projectId], references: [id])
  authorId  String?
  author    User?              @relation(fields: [authorId], references: [kindeId])
  status    ContributionStatus @default(OPEN)
  title     String
  summary   String?
  frames    ContributionFrame[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContributionFrame {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  contributionId  String        @db.ObjectId
  contribution    Contribution  @relation(fields: [contributionId], references: [id])
  frameId         String?       @db.ObjectId
  frame           Frame?        @relation(fields: [frameId], references: [id])
  title           String
  htmlContent     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CliToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [kindeId])
  expiresAt DateTime
  lastUsedAt DateTime?
  createdAt DateTime @default(now())
}
